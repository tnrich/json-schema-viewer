{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://raw.githubusercontent.com/TeselaGen/ve-sequence-parsers/master/schemas/design.json",
  "type": "object",
  "title": "Design",
  "properties": {
    "name": {
      "type": "string",
      "examples": ["my custom design", "example design"]
    },
    "columns": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string",
            "examples": ["column 0", "column 1", "column 2"]
          },
          "icon": {
            "type": "string",
            "enum": [
              "USER-DEFINED",
              "ASSEMBLY_JUNCTION",
              "BLUNT_RESTRICTION_SITE",
              "CDS",
              "FIVE_PRIME_OVERHANG",
              "FIVE_PRIME_UTR",
              "FIVE_PRIME_RESTRICTION_SITE",
              "INSULATOR",
              "OPERATOR_SITE",
              "ORIGIN_OF_REPLICATION",
              "PRIMER_BINDING_SITE",
              "PROMOTER",
              "PROTEASE_SITE",
              "PROTEIN_STABILITY_ELEMENT",
              "RESTRICTION_ENZYME_RECOGNITION_SITE",
              "RIBONUCLEASE_SITE",
              "RBS",
              "RNA_STABILITY_ELEMENT",
              "SIGNATURE",
              "TERMINATOR",
              "THREE_PRIME_OVERHANG",
              "THREE_PRIME_RESTRICTION_SITE",
              "Assembled Construct",
              "Type IIs recognition site",
              "Type IIs cutsite"
            ]
          },
          "direction": {
            "type": "string",
            "enum": ["forward", "reverse"],
            "examples": ["forward", "reverse"]
          },
          "parts": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "index": {
                  "type": "integer",
                  "examples": [0, 1, 2]
                },
                "name": {
                  "type": "string",
                  "examples": ["part A", "part B", "part C"]
                },
                "id": {
                  "type": "string",
                  "examples": ["id1", "id2", "id3"]
                },
                "forced_assembly_strategy": {
                  "type": "string",
                  "enum": ["DIGEST", "PCR", null],
                  "examples": ["DIGEST", "PCR", null]
                }
              },
              "required": ["index"],
              "additionalProperties": false
            },
            "minItems": 1
          },
          "dsf": {
            "type": "boolean",
            "examples": [true, false]
          }
        },
        "required": ["index", "name", "icon", "direction", "parts"],
        "additionalProperties": false
      }
    },
    "assembly_method": {
      "type": "string",
      "enum": ["Gibson/SLIC/CPEC", "Golden Gate", "gateway"],
      "examples": ["Gibson/SLIC/CPEC", "Golden Gate", "gateway"]
    },
    "restriction_enzyme": {
      "type": ["string", "null"],
      "examples": ["EcoRI", "BamHI", null]
    },
    "layout_type": {
      "type": "string",
      "enum": ["list", "combinatorial"],
      "examples": ["list", "combinatorial"]
    },
    "circular": {
      "type": "boolean",
      "examples": [true, false]
    }
  },
  "required": ["name", "columns", "assembly_method", "layout_type", "circular"],
  "additionalProperties": false
}
